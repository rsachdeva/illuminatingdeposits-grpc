FROM golang:1.15.0-alpine AS build
WORKDIR /illuminatingdeposits
COPY go.mod .
RUN go mod download
COPY . .
WORKDIR /illuminatingdeposits/cmd/server
RUN go build

FROM alpine
RUN apk update
RUN apk add bash
WORKDIR /cmd
COPY conf/tls  ./conf/tls
COPY --from=build /illuminatingdeposits/cmd/server/server .
CMD ["./server"]